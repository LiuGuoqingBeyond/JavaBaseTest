<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/halfDefaultPadding"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/halfDefaultPadding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_sino_card"
            android:layout_width="@dimen/defaultItemHeight"
            android:layout_height="@dimen/defaultItemHeight"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text_sinocard_keeper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/image_sino_card"
                android:layout_marginLeft="@dimen/halfDefaultPadding"
                android:layout_toRightOf="@+id/image_sino_card"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="@string/activity_minsheng_banking" />

            <TextView
                android:id="@+id/card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/image_sino_card"
                android:layout_marginStart="@dimen/halfDefaultPadding"
                android:layout_toRightOf="@+id/image_sino_card"
                tools:text="@string/cashier_credit_card" />

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/halfDefaultPadding"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--<TextView
                style="@style/textStyle_body_base"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="****" />

            <TextView
                style="@style/textStyle_body_base"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="****" />

            <TextView
                style="@style/textStyle_body_base"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="****" />-->

            <TextView
                android:id="@+id/text_sinocard_number"
                style="@style/textStyle_body_base"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:gravity="right"
                tools:text="5454" />
            <ImageView
                android:id="@+id/img_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/halfDefaultPadding"
                android:src="@drawable/icon_eyes_normal"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/image_sino_card"
        android:layout_marginLeft="82dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_sino_card1"
            android:layout_width="@dimen/padding_36x"
            android:layout_height="@dimen/padding_36x"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <ImageView
            android:layout_marginStart="@dimen/padding_06x"
            android:id="@+id/image_sino_card2"
            android:layout_width="@dimen/padding_36x"
            android:layout_height="@dimen/padding_36x"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <ImageView
            android:layout_marginStart="@dimen/padding_06x"
            android:id="@+id/image_sino_card3"
            android:layout_width="@dimen/padding_36x"
            android:layout_height="@dimen/padding_36x"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <ImageView
            android:layout_marginStart="@dimen/padding_06x"
            android:id="@+id/image_sino_card4"
            android:layout_width="@dimen/padding_36x"
            android:layout_height="@dimen/padding_36x"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <ImageView
            android:layout_marginStart="@dimen/padding_06x"
            android:id="@+id/image_sino_card5"
            android:layout_width="@dimen/padding_36x"
            android:layout_height="@dimen/padding_36x"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>

