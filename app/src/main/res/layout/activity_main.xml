<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_primary" />

    <Button
        android:id="@+id/btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/defaultPadding"
        android:text="点我进入" />

    <ImageView
        android:id="@+id/image_qr"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <com.uppayplugin.unionpay.javabasetes.utils.AutoFitTextView
        android:id="@+id/tv_resize"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/red"
        android:maxLines="1"
        android:singleLine="true"
        android:gravity="center"/>

    <WebView
        android:id="@+id/webView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.uppayplugin.unionpay.javabasetes.utils.personal.CircleImageView
        android:id="@+id/iv_head_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/list_icon_head_portrait" />

    <ImageView
        android:id="@+id/img_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pic_integral"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/addNewCard"
        style="@style/textStyle_sub_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defaultItemHeight"
        android:drawablePadding="@dimen/halfDefaultPadding"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/defaultPadding"
        android:paddingRight="@dimen/defaultPadding"
        android:text="@string/activity_add_new_card"
        android:textColor="#313131" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
