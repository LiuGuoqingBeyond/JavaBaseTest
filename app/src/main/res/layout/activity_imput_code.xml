<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/other_bg"
    android:orientation="vertical"
    tools:context="com.uppayplugin.unionpay.javabasetest.activity.ImputCodeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/defaultItemHeight"
        android:layout_marginTop="@dimen/defaultPadding"
        android:orientation="horizontal">

        <com.uppayplugin.unionpay.javabasetest.view.EditTextWithDEL
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/defaultPadding"
            android:layout_marginStart="@dimen/defaultPadding"
            android:layout_weight="7"
            android:background="@color/white"
            android:hint="请输入验证码"
            android:paddingEnd="@dimen/defaultPadding"
            android:paddingStart="@dimen/defaultPadding" />

        <Button
            android:id="@+id/btn_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/defaultPadding"
            android:layout_weight="3"
            android:text="绑卡" />
    </LinearLayout>

</LinearLayout>
