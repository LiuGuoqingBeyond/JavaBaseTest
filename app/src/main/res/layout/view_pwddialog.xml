<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/defaultPadding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/pwd_hint_shap"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pwd_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_36x"
            android:gravity="center"
            android:textSize="@dimen/textSizeSubtitle" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:fadingEdge="none"
            android:fillViewport="true">

            <RelativeLayout
                android:id="@+id/pwd_message_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center">

                <TextView
                    android:id="@+id/pwd_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.5"
                    android:padding="@dimen/defaultPadding"
                    android:textColor="#FF666666"
                    android:textSize="@dimen/textSizeBody" />
            </RelativeLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividingLineHeight"
            android:background="@color/other_bg" />

        <Button
            android:id="@+id/true_pwdhint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textAllCaps="false"
            android:textColor="@color/app_main_color"
            android:textSize="@dimen/defaultPadding" />
    </LinearLayout>

</LinearLayout>