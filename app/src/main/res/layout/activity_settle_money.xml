<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/other_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            style="@style/textStyle_body_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/defaultPadding"
            android:text="金额" />

        <EditText
            android:id="@+id/settle_money"
            style="@style/tv_style_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/defaultPadding"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入交易金额"
            android:inputType="number" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/halfDefaultPadding"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/defaultItemHeight"
            android:gravity="center_vertical">

            <TextView
                style="@style/textStyle_body_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/defaultPadding"
                android:text="交易金额小于等于" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/defaultPadding"
                android:background="@drawable/icon_select_normal" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividingLineHeight"
            android:layout_marginEnd="@dimen/halfDefaultPadding"
            android:layout_marginStart="@dimen/halfDefaultPadding"
            android:background="@color/dividingLine" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/defaultItemHeight"
            android:gravity="center_vertical">

            <TextView
                style="@style/textStyle_body_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/defaultPadding"
                android:text="交易金额大于" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/defaultPadding"
                android:background="@drawable/icon_select_normal" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/defaultPadding"
        android:layout_marginStart="@dimen/defaultPadding"
        android:layout_marginTop="@dimen/defaultItemHeight"
        android:text="确认"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/btnTextSize" />

</LinearLayout>
