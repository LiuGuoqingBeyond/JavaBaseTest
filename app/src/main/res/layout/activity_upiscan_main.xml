<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.uppayplugin.unionpay.javabasetest.activity.UPIScanMainActivity">

    <Button
        android:id="@+id/add_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defaultItemHeight"
        android:layout_marginTop="@dimen/defaultItemHeight"
        android:text="添加银行卡"/>

    <Button
        android:id="@+id/card_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defaultItemHeight"
        android:text="银行卡列表"/>

    <Button
        android:id="@+id/settle_record"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defaultItemHeight"
        android:text="交易记录"/>

    <Button
        android:id="@+id/upi_scan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defaultItemHeight"
        android:text="扫一扫"/>

</LinearLayout>
