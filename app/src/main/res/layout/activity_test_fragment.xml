<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_signin_background"
    android:orientation="vertical"
    android:scaleType="fitXY">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/defaultPadding"
        android:layout_marginStart="@dimen/defaultPadding"
        android:layout_marginTop="@dimen/defaultItemHeight"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_03x">

            <RadioButton
                android:id="@+id/pay"
                style="@style/login_menu_tab"
                android:checked="true"
                android:drawableBottom="@drawable/rodiobutton_login_selector"
                android:drawablePadding="@dimen/padding_05x"
                android:text="支出"
                android:textColor="@color/radiobutton_selector_color" />

            <RadioButton
                android:id="@+id/income"
                style="@style/login_menu_tab"
                android:drawableBottom="@drawable/rodiobutton_login_selector"
                android:drawablePadding="@dimen/padding_05x"
                android:text="收入"
                android:textColor="@color/radiobutton_selector_color" />

        </RadioGroup>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defaultItemHeight" />

</LinearLayout>
