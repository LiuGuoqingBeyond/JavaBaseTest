<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme" />

    <!-- dealog style -->
    <style name="dialog_style" parent="@android:style/Theme.Dialog">
        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!--ToolBar文字 style-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/alpha_75_black</item>
    </style>

    <!-- 常用按钮的样式 -->
    <style name="btnStyle_normal" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_bottom_bg_color_primary</item>
        <item name="android:textSize">@dimen/btnTextSize</item>
        <item name="android:textColor">@color/btn_text_color_color_primary</item>
    </style>

    <style name="loadingdialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="transparentdialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item><!--隐藏标题栏-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="textStyle_black_bold">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/textSizeSubtitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

    <style name="textStyle_body_base">
        <item name="android:textSize">@dimen/textSizeBody</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tv_style_black">
        <item name="android:textSize">@dimen/textSizeBody</item>
        <item name="android:textColor">@color/textColorTitle</item>
        <item name="android:textColorHint">@color/textColorHint</item>
    </style>

    <style name="animTranslate">
        <item name="android:windowEnterAnimation">@anim/translate_in</item>
        <item name="android:windowExitAnimation">@anim/translate_out</item>
    </style>

    <style name="Text.Toolbar.Action" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorSubtitle</item>
    </style>

    <style name="Text.Toolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColorTitle</item>
    </style>

    <style name="toolbarPrimary" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="toolbarPop" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="textStyle_body_base_white">
        <item name="android:textSize">@dimen/textSizeBody</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="et_style_black">
        <item name="android:textSize">@dimen/textSizeBody</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/textColorHint</item>
    </style>

    <style name="textStyle_sub_text">
        <item name="android:textSize">@dimen/textSizeSubtitle</item>
        <item name="android:textColor">@color/textColorSubtitle</item>
    </style>

    <style name="textStyle_caption">
        <item name="android:textSize">@dimen/textSizeCaption</item>
        <item name="android:textColor">@color/textColorHint</item>
    </style>

    <style name="textStyle_base">
        <item name="android:textSize">@dimen/textSizeBody</item>
        <item name="android:textColor">@color/textColorSubtitle</item>
        <item name="android:textColorHint">@color/textColorHint</item>
    </style>

    <style name="textStyle_hint_base">
        <item name="android:textSize">@dimen/textSizeBody</item>
        <item name="android:textColor">@color/textColorHint</item>
    </style>

    <style name="login_menu_tab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:button">@null</item>
    </style>

    <style name="QuickOpen">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="TopSelectAnimationShow">
        <item name="android:windowEnterAnimation">@anim/top_enter</item>
        <item name="android:windowExitAnimation">@anim/top_exit</item>
    </style>

    <style name="BottompSelectAnimationShow">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!--QQ数字风格样式，注意每一项都不能少-->
    <style name="picture.QQ.style" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/white</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/blue</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">false</item>
        <!--返回键图标-->
        <item name="picture.leftBack.icon">@drawable/picture_back</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@drawable/icon_down</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@drawable/arrow_up</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/black</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/white</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/checkbox_num_selector</item>
        <!--开启图片列表勾选数字模式,开启的话勾选样式要换-->
        <item name="picture.style.checkNumMode">true</item>
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">false</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">#fafafa</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/blue</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/blue</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/num_oval_blue</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/white</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/blue</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">#99000000</item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">#fafafa</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@drawable/nav_return_white</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/bar_grey</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/bar_grey</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/white</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/orange_oval</item>
    </style>

    <style name="textStyle_sub_colorPrimary">
        <item name="android:textSize">@dimen/textSizeSubtitle</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="textStyle_body_80black">
        <item name="android:textSize">@dimen/textSizeBody</item>
        <item name="android:textColor">@color/alpha_80_black</item>
        <item name="android:textColorHint">@color/alpha_30_black</item>
    </style>

    <style name="textStyle_sub_80black_two">
        <item name="android:textSize">@dimen/textSizeSubtitle</item>
        <item name="android:textColor">@color/alpha_80_black</item>
    </style>

    <style name="textStyle_white">
        <item name="android:textSize">@dimen/textSizeBody</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--透明，有任务栏电量时间等-->
    <style name="NoTitleTranslucentTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/half_transparents</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="fullDialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
